generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Ferramentas {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  Nome              String
  Valor             Float
  Patrimonio        String
  Observacao        String
  Empresa           String
  CentroDeCusto     String
  NomeDeResponsavel String
  TipoDeCadastro    String
  Status            String
  StatusDelete      Boolean
}
