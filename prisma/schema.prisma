generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Ferramentas {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  Nome                  String
  Valor                 Float
  Patrimonio            String    @unique
  Observacao            String
  Empresa               String
  CentroDeCusto         String
  NomeDeResponsavel     String
  TipoDeCadastro        String
  Status                String
  StatusDelete          Boolean
  ObsEmprestado         String?
  ResponsavelEmprestado String?
  DataEmprestado        DateTime?
  DataDevolvida         DateTime?
  StatusEmprestado      Boolean?
}

model FerramentaHistorico {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  Nome                  String
  Valor                 Float
  Patrimonio            String
  Observacao            String
  Empresa               String
  CentroDeCusto         String
  NomeDeResponsavel     String
  TipoDeCadastro        String
  Status                String
  StatusDelete          Boolean
  ObsEmprestado         String?
  ResponsavelEmprestado String?
  DataEmprestado        String?
  DataDevolvida         String?
  StatusEmprestado      Boolean?
  DateAlterado          String?
}

model CentroCusto {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  CentroCusto  String
  StatusDelete Boolean
}

model Empresa {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  Empresa      String
  StatusDelete Boolean
}
